<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_linearlayout"
        android:padding="10dp"
        android:background="@drawable/button"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view7"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/search"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/todo" />


        <ImageView
            android:id="@+id/image_view8"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/camera"
            android:layout_marginEnd="300dp"
            android:contentDescription="@string/todo" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_parta"
        android:layout_below="@+id/menu_linearlayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical"
        android:padding="10dp"
        android:id="@+id/relative_layout_parta">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button"
            android:text="@string/proceed_to_buy_1_item"
            android:textColorLink="#74CAF1"
            android:backgroundTint="@color/yellow"
            android:backgroundTintMode="screen"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/wine_bottle"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/todo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lexton 20LED Wine Bottle Cork Lights Copper Wire String Lights,.."
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_below="@id/textView"
                    android:id="@+id/linearLayout2"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="199.00"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="prime"
                        android:textColor="@color/blue"/>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linearLayout2"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="In stock"
                    android:textColor="@color/green"
                    android:textColorLink="#BAED7F" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:orientation="horizontal"
            android:id="@+id/delete_button_relative_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:orientation="horizontal"
                android:layout_marginRight="30dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/delete_button" />


                <TextView
                    android:layout_below="@+id/linearLayout3"
                    android:id="@+id/textView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textColor="@color/blue"
                    android:textColorLink="#BAED7F"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/plus_button" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_button_linear_layout">

                    <Button
                        android:id="@+id/delte_button"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Delete"
                        android:layout_marginLeft="110dp"
                        android:textSize="12dp"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:background="@drawable/button"/>

                    <Button
                        android:id="@+id/save_for_later_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@id/delte_button"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:text="@string/save_for_later"
                        android:textColorLink="#C1BFBF"
                        android:textSize="12dp"
                        android:background="@drawable/button"/>

                </LinearLayout>


                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delete_button_linear_layout"
                    android:text="See more like this"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/blue"/>
            </RelativeLayout>

        </RelativeLayout>


      <ListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/list_view1">



              <TextView
                  android:layout_width="120dp"
                  android:layout_height="200dp"
                  android:background="@drawable/button"
                  android:inputType="textMultiLine"
                  android:text="Saved items with price drops"
                  android:textColor="@color/black"
                  android:textColorLink="#E6E6E6"
                  android:textSize="15dp"
                  android:layout_marginTop="10dp"
                  android:backgroundTintMode="screen"
                  android:backgroundTint="@color/gray"/>

      </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/list_view1"
            android:background="@color/light_gray"
            android:id="@+id/view2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_layout_pay_faster"
            android:orientation="vertical"
            android:layout_below="@+id/view2">


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_faster_for_all_your_shopping_needs"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:text="With Amazon Pay Balance"
                android:textColor="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:text="Get instant Refunds."
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:text="Know more"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>



        </RelativeLayout>




    </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linearlayout_parta"
        android:background="@color/light_gray"
        android:id="@+id/view1">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_menu"
        android:orientation="horizontal"
        android:layout_below="@+id/view1">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/home"
            android:layout_marginLeft="30dp"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/person"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:contentDescription="TODO" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/cart"
            android:layout_toEndOf="@id/imageView6"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/menu"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:contentDescription="@string/todo" />



    </RelativeLayout>




</RelativeLayout>