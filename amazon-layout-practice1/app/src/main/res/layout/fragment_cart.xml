<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_parta"
        android:orientation="vertical"
        android:padding="10dp">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button5"
                android:text="@string/proceed_to_buy_1_item"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/yellow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:orientation="horizontal"
                android:id="@+id/linearLayout_winebottle"
                android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/wine_bottle"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/todo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lexton_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lexton 20 LED Wine Bottle Cork Lights Copper Wire String Lights,.."
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lexton_textview"
                    android:id="@+id/linearlayout_winebottle_right"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/wineprice_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬ 199.00"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="prime"
                        android:textColor="@color/dark_blue"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linearlayout_winebottle_right"
                    android:id="@+id/instock_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In stock"
                    android:textSize="15dp"
                    android:textColor="@color/dark_green"/>
            </RelativeLayout>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/relative_layout_delete_button"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayout_deletebutton"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/deletebutton_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:background="@drawable/button4"/>


                    <TextView
                        android:layout_below="@+id/linearLayout3"
                        android:id="@+id/textview_itemcount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_weight="2"
                        android:background="@drawable/button3" />

                    <ImageView
                        android:id="@+id/add_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_weight="1"
                        android:background="@drawable/button4" />

                 </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/linearlayout_deletebutton">

                    <Button
                        android:id="@+id/delte_button"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="Delete"
                        android:textSize="12dp"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:background="@drawable/button"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/save_for_later_button"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:text="@string/save_for_later"
                        android:textSize="12dp"
                        android:layout_marginLeft="20dp"
                        android:textAllCaps="false"
                        android:background="@drawable/button"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/see_more_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_delete_button"
                android:text="See more like this"
                android:layout_marginLeft="120dp"
                android:textColor="@color/teal_200"/>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/see_more_text_view"
                android:layout_marginBottom="3dp"
                android:id="@+id/horizontal_scroll_view">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="200dp"
                        android:background="@drawable/button"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/light_gray2"
                        android:backgroundTintMode="screen"
                        android:id="@+id/linearlayout_1">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:textColor="@color/black"
                            android:text="Saved items with price drops"
                            android:padding="10dp"
                            android:textSize="15dp">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="200dp"
                        android:background="@drawable/button"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:backgroundTint="@color/light_gray2"
                        android:backgroundTintMode="screen"
                        android:id="@+id/linearlayout_2">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:textColor="@color/black"
                            android:text="Saved items with price drops"
                            android:padding="10dp">
                        </TextView>

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout_pay_faster"
            android:orientation="vertical"
            android:layout_below="@id/horizontal_scroll_view">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_faster_for_all_your_shopping_needs"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:text="With Amazon Pay Balance"
                android:textColor="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:orientation="horizontal"
                android:id="@+id/linear_layout_get_instant_refund">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get instant Refunds."
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Know more>"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_parta"
        android:id="@+id/linearlayout_bar1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="100dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/light_gray2">
        </View>
    </LinearLayout>


    </LinearLayout>


</ScrollView>