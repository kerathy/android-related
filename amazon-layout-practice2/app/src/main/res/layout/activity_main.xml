<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relative_layout1">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button"
            android:text="Proceed to Buy (3 items)"
            android:textColorLink="#74CAF1"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="84dp"
            android:backgroundTint="@color/yellow"
            android:backgroundTintMode="screen"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/wine_bottle"
                android:layout_marginEnd="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lexton 20LED Wine Bottle Cork Lights Copper Wire String Lights,.."
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_below="@id/textView"
                    android:id="@+id/linearLayout2"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="199.00"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="prime"
                        android:textColor="@color/blue"/>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linearLayout2"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="In stock"
                    android:textColor="@color/green"
                    android:textColorLink="#BAED7F" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:orientation="horizontal"
            android:id="@+id/delete_button_relative_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:orientation="horizontal"
                android:layout_marginRight="30dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/delete_button" />


                <TextView
                    android:layout_below="@+id/linearLayout3"
                    android:id="@+id/textView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textColor="@color/blue"
                    android:textColorLink="#BAED7F"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/plus_button" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_button_linear_layout">

                    <Button
                        android:id="@+id/delte_button"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Delete"
                        android:layout_marginLeft="110dp"
                        android:textSize="12dp"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:background="@drawable/button"/>

                    <Button
                        android:id="@+id/save_for_later_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@id/delte_button"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="screen"
                        android:text="Save for Later"
                        android:textColorLink="#C1BFBF"
                        android:textSize="12dp"
                        android:background="@drawable/button"/>

                </LinearLayout>


                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delete_button_linear_layout"
                    android:text="See more like this"
                    android:layout_marginLeft="110dp"
                    android:textColor="@color/blue"/>
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>